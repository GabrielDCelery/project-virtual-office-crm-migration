{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier", "eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "globalRequire": false,
    "__dirname": false,
    "describe": false,
    "beforeEach": false,
    "afterEach": false,
    "it": false
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "no-process-exit": "off",
    "object-shorthand": "off"
  }
}
